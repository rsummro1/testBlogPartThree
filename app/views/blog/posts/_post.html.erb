<div class='col-sm-6 col-lg-4'>
<div class="card">
  <div class="card-topper" <%= link_to image_tag post.banner_image_url %> 
  </div>
        <div class="card-block">
        <h4 class="card-title"><%= link_to post.title, post %></h4>
          <p class="published-date"><%= post.display_day_published %></p>
            <p class="card-text"><%= truncate(post.description, lenght: 130) %></p>
            <%= link_to 'Read', post, class: 'btn btn-read' %>
  </div>
</div>
</div>